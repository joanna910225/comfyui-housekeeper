{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "typeRoots": ["src/types", "node_modules/@types"]
  },
  "exclude": ["node_modules", "dist", "js"]
}
